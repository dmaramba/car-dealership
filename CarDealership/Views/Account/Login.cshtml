@model CarDealership.Models.LoginViewModel
@{
    ViewData["Title"] = "Sign in";
    var returnUrl = (string?)ViewData["ReturnUrl"];
}

<div class="row justify-content-center mt-5">
    <div class="col-12 col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4 p-md-5 bg-light">

                <div class="text-center mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center bg-primary bg-opacity-10 text-primary rounded-circle p-3 mb-3">
                        <i class="bi bi-car-front-fill fs-2"></i>
                    </div>
                    <h3 class="fw-bold mb-1 text-primary">Car Sales</h3>
                    <p class="text-muted mb-0">Sign in to manage vehicles, customers, and sales</p>
                </div>

                <form asp-action="Login" method="post" novalidate>
                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="UserNameOrEmail" class="form-label fw-semibold">Username or Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white text-muted">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input asp-for="UserNameOrEmail" class="form-control" autocomplete="username" placeholder="Enter your username or email" />
                        </div>
                        <span asp-validation-for="UserNameOrEmail" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-semibold">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white text-muted">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" placeholder="Enter your password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label text-muted"></label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold shadow-sm">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Sign In
                    </button>
                </form>

                <div class="mt-4 text-center">
                    <small class="text-muted d-block mb-1">Default admin credentials:</small>
                    <code>admin@cars.local</code> / <code>Cars#123456</code>
                </div>

      
                <div class="mt-3 text-center">
                    <a asp-controller="Account" asp-action="ForgotPassword" class="small">Forgot password?</a>
                    <span class="text-muted mx-1">•</span>
                    <a asp-controller="Account" asp-action="Register" class="small">Create an account</a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
