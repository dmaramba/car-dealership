@model List<Vehicle>

@{
    ViewData["Title"] = "Vehicles";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-5 fw-semibold text-primary">
            <i class="bi bi-car-front-fill me-2"></i> Vehicles
        </h1>
        <p class="lead text-muted">
            Manage your car listings and availability below.
        </p>
        <hr class="w-25 mx-auto text-primary opacity-75" />
    </div>

    <!-- Vehicle List Card -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-gradient text-white"
             style="background: linear-gradient(90deg, #0d6efd, #6610f2);">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-car-front me-2"></i> Vehicle List</h5>
                <a asp-action="Create" asp-controller="Vehicles" class="btn btn-light btn-sm">
                    <i class="bi bi-plus-lg me-1"></i> Add New Vehicle
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-primary text-center">
                            <tr>
                                <th>Make</th>
                                <th>Model</th>
                                <th>Year</th>
                                <th>Fuel Type</th>
                                <th>Condition</th>
                                <th>Color</th>
                                <th>Price (R)</th>
                                <th>Available</th>
                                <th style="width:220px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var car in Model)
                            {
                                <tr>
                                    <td>@car.Make</td>
                                    <td>@car.Model</td>
                                    <td>@car.Year</td>
                                    <td>@car.FuelType</td>
                                    <td>@car.Condition</td>
                                    <td>@car.Color</td>
                                    <td>@car.Price.ToString("N0")</td>
                                    <td>
                                        @if (car.IsAvailable)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger"><i class="bi bi-x-circle"></i> No</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Edit", "Vehicles", new { id = car.Id })"
                                               class="btn btn-outline-warning">
                                                <i class="bi bi-pencil-square me-1"></i> Edit
                                            </a>

                                            <form asp-action="Delete" asp-controller="Vehicles" asp-route-id="@car.Id"
                                                  method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger"
                                                        onclick="return confirm('Remove this vehicle?');">
                                                    <i class="bi bi-trash me-1"></i> Remove
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-exclamation-circle display-6 d-block mb-2"></i>
                    No vehicles available yet.
                </div>
            }
        </div>
    </div>
</div>
